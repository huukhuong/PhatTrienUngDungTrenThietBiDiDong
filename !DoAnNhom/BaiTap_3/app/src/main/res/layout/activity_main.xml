<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/itim"
        android:gravity="center"
        android:paddingVertical="18dp"
        android:text="Currency Exchange"
        android:textColor="@color/white"
        android:textSize="32sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:spinnerMode="dialog"
                android:id="@+id/spnFrom"
                android:backgroundTint="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end|center_vertical">

                <TextView
                    android:id="@+id/txtInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/itim"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="30dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="20dp">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/white" />

            <androidx.cardview.widget.CardView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="14dp"
                android:elevation="10dp"
                app:cardCornerRadius="100dp">

                <ImageButton
                    android:id="@+id/btnReverse"
                    android:background="@drawable/circle_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/double_arrows" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:spinnerMode="dialog"
                android:id="@+id/spnTo"
                android:backgroundTint="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end|center_vertical">

                <TextView
                    android:id="@+id/txtOutput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/itim"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="30dp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <!-- Keyboard layout -->
    <RelativeLayout
        android:id="@+id/keyboardWrapper"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom">

        <ImageView
            android:id="@+id/keyboardRipple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/keyboardLayout"
            android:layout_marginBottom="-50dp"
            android:src="@drawable/bg_ripple" />

        <TableLayout
            android:id="@+id/keyboardLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:paddingBottom="10dp">

            <TableRow>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <android.widget.Button
                        android:id="@+id/btnNum1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/circle_button"
                        android:fontFamily="@font/itim"
                        android:text="1"
                        android:textColor="@color/purple_200"
                        android:textSize="42sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <android.widget.Button
                        android:id="@+id/btnNum2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/circle_button"
                        android:fontFamily="@font/itim"
                        android:text="2"
                        android:textColor="@color/purple_200"
                        android:textSize="42sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <android.widget.Button
                        android:id="@+id/btnNum3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/circle_button"
                        android:fontFamily="@font/itim"
                        android:text="3"
                        android:textColor="@color/purple_200"
                        android:textSize="42sp" />
                </androidx.cardview.widget.CardView>
            </TableRow>

            <TableRow>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <android.widget.Button
                        android:id="@+id/btnNum4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/circle_button"
                        android:fontFamily="@font/itim"
                        android:text="4"
                        android:textColor="@color/purple_200"
                        android:textSize="42sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <android.widget.Button
                        android:id="@+id/btnNum5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/circle_button"
                        android:fontFamily="@font/itim"
                        android:text="5"
                        android:textColor="@color/purple_200"
                        android:textSize="42sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <android.widget.Button
                        android:id="@+id/btnNum6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/circle_button"
                        android:fontFamily="@font/itim"
                        android:text="6"
                        android:textColor="@color/purple_200"
                        android:textSize="42sp" />
                </androidx.cardview.widget.CardView>
            </TableRow>

            <TableRow>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <android.widget.Button
                        android:id="@+id/btnNum7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/circle_button"
                        android:fontFamily="@font/itim"
                        android:text="7"
                        android:textColor="@color/purple_200"
                        android:textSize="42sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <android.widget.Button
                        android:id="@+id/btnNum8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/circle_button"
                        android:fontFamily="@font/itim"
                        android:text="8"
                        android:textColor="@color/purple_200"
                        android:textSize="42sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <android.widget.Button
                        android:id="@+id/btnNum9"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/circle_button"
                        android:fontFamily="@font/itim"
                        android:text="9"
                        android:textColor="@color/purple_200"
                        android:textSize="42sp" />
                </androidx.cardview.widget.CardView>
            </TableRow>

            <TableRow>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <android.widget.Button
                        android:id="@+id/btnNumClear"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/circle_button"
                        android:fontFamily="@font/itim"
                        android:text="c"
                        android:textColor="@color/purple_200"
                        android:textSize="42sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <android.widget.Button
                        android:id="@+id/btnNum0"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/circle_button"
                        android:fontFamily="@font/itim"
                        android:text="0"
                        android:textColor="@color/purple_200"
                        android:textSize="42sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <android.widget.ImageButton
                        android:id="@+id/btnNumBackspace"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/circle_button"
                        android:src="@drawable/btn_backspace" />
                </androidx.cardview.widget.CardView>
            </TableRow>

        </TableLayout>

    </RelativeLayout>
    <!-- End Keyboard layout -->


</LinearLayout>